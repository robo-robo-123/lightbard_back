                <StackPanel Orientation="Vertical">
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding UserName}" TextWrapping="Wrap" />
                    <TextBlock Text="{Binding ScreenName}" TextWrapping="Wrap"/>
