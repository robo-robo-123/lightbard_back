      <CommandBar.SecondaryCommands>
        <AppBarButton Label="Secondary1" Icon="Edit"/>
        <AppBarButton Label="Secondary2" Icon="Edit"/>
        <AppBarToggleButton Label="Secondary3" Icon="Edit"/>
      </CommandBar.SecondaryCommands>
